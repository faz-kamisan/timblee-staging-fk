<!-- Invite Team Modal -->
<div class="modal fade" id="account-summary-modal" tabindex="-1" role="dialog" aria-labelledby="account-summary-modalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">
            <%= image_tag('close-modal.svg', class: 'close-modal') %>
          </span>
        </button>
        <h4 class="modal-title">Summary</h4>
        <p class="modal-message"></p>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-6 p-t-b-20">
          Current Users
          <span class='pro-users-count'><%= "#{current_business.users.count} #{'user'.pluralize(current_business.users.count)}" %></span>
          </div>
          <div class="col-xs-6 text-center">
          Monthly Charge
          $<span class='new-pro-charges'><%= Business.monthly_charge(current_business.users.count) %></span>
          </div>
          <div class="col-xs-12">
            <div class="modal-button text-center">
          <a data-toggle="modal" data-dismiss="modal" class="btn btn-grey btn-pink" href="#pro-plan-modal">Next</a>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag('tagIt') %>
