<!-- Reset Page -->
<main class="main">
  <section class="user-entry">
    <div class="panel">
      <div class="panel-body text-center">
        <div class="logo">
          <%= image_tag('Timblee-icon.svg', class: 'logo-inner') %>
        </div>
        <h1 class="modal-heading">
          Reset your password
        </h1>
        <% if resource.errors[:reset_password_token].present? %>
          <div class='field_with_errors'>
            <span class='error-message login-error-message'>Reset password token is invalid.</span>
          </div>
        <% end %>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'user-form' }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Your password' %>
            <span class='error-message'><%= f.object.errors[:password].join(',') %></span>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Your password again' %>
            <span class='error-message'><%= f.object.errors[:password_confirmation].join(',') %></span>
          </div>
          <div class="form-group m-b-10">
            <%= f.submit "Reset your password", class: 'btn btn-pink btn-block' %>
          </div>
          <div class="row recover">
            <div class="col-md-6 text-left">
              <%- if controller_name != 'sessions' %>
                <%= link_to "Log in here.", new_session_path(resource_name), class: 'link-regular' %><br />
              <% end -%>
            </div>
            <div class="col-md-6 text-right">
              <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                <%= link_to "Don't have a login?", new_registration_path(resource_name), class: 'link-regular' %>
              <% end -%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</main>
<!-- Reset Page -->
