<div class="modal fade" id="pro-plan-modal" tabindex="-1" role="dialog" aria-labelledby="pro-plan-modalLabel">
  <div class="modal-dialog" role="document">
    <%= form_tag businesses_card_path, { method: :post, id: 'add-card-modal-form' } do |f| %>
      <div class="modal-content">
        <div class="modal-header text-center">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">
              <%= image_tag('close-modal.svg', class: 'close-modal') %>
            </span>
          </button>
          <a href="#choose-plan-modal" class="go-back btn-modal-open" data-dismiss="modal" data-toggle="modal">
            <span class="icon icon-caret"></span>
            Back
          </a>
          <h4 class="modal-title">Pro plan</h4>
          <p class="modal-message">Awesome choice! The Pro plan is just $19 for the first user (you) and then <br> $12 per month for each additional user.</p>
        </div>
        <div class="modal-body">
          <a href='javascript:void(0);' id='add-new-card'>Add New Card</a> |
          <a href='javascript:void(0);' id='use-saved-card'> Use Saved Card</a>
          <div class="pay">
            <% if @card %>
              <div class="old-card-info show">
                <p class="font-12-light cc-detail-save">We're currently charging your <%= @card.brand %> ending in <%= @card.last4 %>. We accept MasterCard, Visa and American Express.</p>
                <div class="text-center col-xs-12">
                  <button class="btn btn-success" id='confirm-saved-card'>Confirm &amp; Proceed</button>
                </div>
              </div>
            <% end %>
            <div class="new-card <%= @card ? 'hide' : 'show' %>">
              <span class='cc-errors'></span>
              <div class="row">
                <div class="form-group col-xs-12">
                  <input type="text" class="form-control default-input cc-number" placeholder="Card number">
                </div>
                <div class="form-group col-xs-6">
                  <input type="text" class="form-control default-input cc-exp" placeholder="MM / YY">
                </div>
                <div class="form-group col-xs-6">
                  <input type="password" class="form-control default-input cc-cvv" placeholder="CVV">
                </div>
                <div class="text-center col-xs-12">
                  <button type="submit" class="btn btn-success" id="add-card">Add Card &amp; Proceed</button>
                </div>
              </div>
            </div>
          </div>
          <div class="text-center">
            <p class="para-light-14">All amounts are in USD.</p>
            <%= image_tag('stripe-payment.png') %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
