<!-- revoke invite Modal -->
<div class="modal fade" id="revoke-invite-modal" tabindex="-1" role="dialog" aria-labelledby="revoke-invite-modalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">
            <%= image_tag('close-modal.svg', class: 'close-modal') %>
          </span>
        </button>
        <h4 class="modal-title">Revoke Invitation</h4>
        <p class="modal-message">You're about to revoke an invite from your account.</p>
      </div>
      <div class="modal-body">
        <div class="text-center">
          <div class="invite-name-to-revoke">
            <%= image_tag('profile-image.png', class: 'profile-image with-delete') %>
            <span> <%= user.email %></span>
          </div>
        </div>
        <div class="modal-button text-center">
          <%= link_to "Revoke Invite", revoke_user_path(user), class: "btn btn-red", remote: true %>
          <a href="#" data-dismiss="modal" class="btn btn-transparent btn-last">Cancel</a>
        </div>
      </div>
    </div>
  </div>
</div>
