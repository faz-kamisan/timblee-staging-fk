<!-- Sign Up Page for invited users -->
<main class="main">
  <section class="user-entry registration-page invited-user">
    <div class="panel">
      <div class="panel-body text-center">
        <div class="logo">
          <%= image_tag('Timblee-icon.svg', class: 'logo-inner') %>
        </div>
        <h1 class="modal-heading">
          Join your team on Timblee to create and <br> share beautiful visual sitemaps.
        </h1>
        <p class="small">
          Choose a password to complete signing up.
        </p>
        <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { method:  :put, class: 'user-form' } do |f| %>

          <%= f.hidden_field :invitation_token %>

          <div class="form-group">
            <%= f.text_field :full_name, placeholder: 'Your name', class: 'form-control' %>
            <span class='error-message'><%= f.object.errors[:full_name].join(',') %></span>
          </div>
          <div class="form-group">
            <%= f.text_field :email, placeholder: 'Your work email', class: 'form-control', disabled: true %>
            <span class='error-message'><%= f.object.errors[:email].join(',') %></span>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Choose a password' %>
           <span class='error-message'><%= f.object.errors[:password].join(',') %></span>
          </div>
          <div class="form-group">
            <%= f.submit "JOIN THE TEAM", class: 'btn btn-pink btn-block' %>
          </div>
        <% end %>
        <p class="go-to-terms">By signing up, you agree to our straightforward <a href="http://timblee.io/terms" class="link" target='_blank'>terms</a>.</p>
        <p class="go-to-login">
          Already have a Timblee account
          <%= link_to "using another email?", new_session_path(resource_name), class: 'link regular' %>.
        </p>
      </div>
    </div>
  </section>
</main>
<!-- Sign Up Page for invited users -->
