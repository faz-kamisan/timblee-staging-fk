<!-- Delete Folder Modal -->
<div class="modal fade" id="delete-userflow-modal" tabindex="-1" role="dialog" aria-labelledby="delete-userflow-modalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">
            <%= image_tag('close-modal.svg', class: 'close-modal') %>
          </span>
        </button>
        <h4 class="modal-title">Delete Userflow</h4>
        <p class="modal-message">Are you sure you want to delete this userflow: <span class='delete-modal-userflow-name'></span></p>
      </div>
      <div class="modal-body">
        <div class="text-center">
          <div class="userflow-name-to-delete">
            <span class="icon-userflow-light"></span>
            <span class="inner-name"></span>
          </div>
        </div>
        <div class="modal-button text-center">
          <%= link_to "#", method: :delete, class: "btn btn-red", id:'confirm-delete-userflow-btn' do %>
              Delete userflow
          <% end %>
          <a href="#" data-dismiss="modal" class="btn btn-transparent btn-last">Cancel</a>
        </div>
      </div>
    </div>
  </div>
</div>
