<% if current_user %>
  <div class='row'>
    <div class='col-md-2' style='border: 1px solid black;'>
      <h3>Folders</h3>
      <div class='folders-listing'>
        <% current_user.business.folders.each do |folder| %>
          <div data-id=<%= folder.id %>>
            <%= folder.name %>
            <%= link_to 'x', folder_path(folder), method: :delete, remote: true %>
          </div>
        <% end %>
      </div>
      <%= form_for Folder.new, remote: true do |f| %>
        <%= f.text_field :name, placeholder: 'Name' %>
        <%= f.submit 'Create' %>
      <% end %>
    </div>
  </div>

<% if current_user %>
  <!-- Header -->
  <header class="main-header">
    <div class="row">
      <div class="col-xs-6">
        <div class="row">
          <div class="col-xs-3">
            <a href="javascript:void(0);">
              <%= image_tag('Timblee-logo.svg', class: 'logo-main') %>
            </a>
          </div>
          <div class="col-xs-9">
            <ul id="navigation" class="clearfix p-0 m-0">
              <li class="nav-item"><a href="javascript:void(0);">Home</a></li>
              <li class="nav-item"><a href="javascript:void(0);">Progress</a></li>
              <li class="nav-item"><a href="javascript:void(0);">Jump to</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </header>
  <!-- Header -->

  <section class="user-dashboard p-t-50">
    <div class="container">
      <div class="row">
        <aside class="folders col-xs-3 p-0">
          <%= form_for Folder.new, remote: true, html: { class: 'new-folder' } do |f| %>
            <div class="form-group">
            <%= f.text_field :name, class: "form-control folder-name-field", placeholder: "+ New Folder" %>
            </div>
          <% end %>
          <ul class="folders-list p-0 m-0">
            <li class="folder-info all-site-map-folder">
              <a href="javascript:void(0);" class="delete-folder">
                <%= image_tag('cross.png') %>
              </a>
              <a href="javascript:void(0);">
                <%= image_tag('more-icon.png', class: 'folder-icon') %>
                <span class="folder-name">All sitemaps</span>
                <span class="folder-items"><%= current_user.all_site_maps.count %></span>
              </a>
            </li>
            <% current_user.business.folders.each do |folder| %>
              <%= folder_line_item(folder) %>
            <% end %>
          </ul>
        </aside>
        <div class="sitemap-cards col-xs-9 p-0">
          <h1>All Sitemaps</h1>
          <div class="row p-t-40">
            <div class="col-xs-4 site-map-container new-site-map">
              <a href="javascript:void(0);" class="site-card">

              </a>
            </div>
            <% current_user.all_site_maps.each do |site_map| %>
              <div class="col-xs-4 site-map-container" data-id=<%= site_map.id %> data-folder-id=<%= site_map.folder_id %>>
                <div class="site-card">
                  <a href="javascript:void(0);" class="point"></a>
                  <h2 class="card-name"><%= site_map.name %></h2>
                  <p class="updated">Last updated <%= site_map.updated_at_formatted %></p>
                  <p class="version">Version 1.0</p>
                  <div class="actions">
                    <ul class="card-users clearfix">
                      <li>
                        <%= image_tag('card-user.jpg') %>
                      </li>
                      <li>
                        <%= image_tag('card-user.jpg') %>
                      </li>
                      <li>
                        <%= image_tag('card-user.jpg') %>
                      </li>
                    </ul>
                    <span class="other-users">+12</span>
                  </div>
                  <a href="javascript:void(0);" class="more-options">
                    <%= image_tag('more-icon.png') %>
                  </a>
                  <div class="actions-overlay">
                    <ul class="p-0 m-0">
                      <li>
                        <%= image_tag('more-icon.png', class: 'action-icon') %>
                        <a href="javascript:void(0);" class="action">Dulpicate</a>
                      </li>
                      <li>
                        <%= image_tag('more-icon.png', class: 'action-icon') %>
                        <a href="javascript:void(0);" class="action">Rename</a>
                      </li>
                      <li>
                        <%= image_tag('more-icon.png', class: 'action-icon') %>
                        <a href="javascript:void(0);" class="action">Invite a team member</a>
                      </li>
                      <li>
                        <%= image_tag('more-icon.png', class: 'action-icon') %>
                        <a href="javascript:void(0);" class="action">Share</a>
                      </li>
                      <li>
                        <%= image_tag('more-icon.png', class: 'action-icon') %>
                        <a href="javascript:void(0);" class="action">Delete</a>
                      </li>
                    </ul>
                    <a href="javascript:void(0);" class="close-action-overlay">
                      <%= image_tag('more-icon.png') %>
                    </a>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
<% else %>
  <%= link_to 'Login', new_user_session_path %>
  </div>
<% end %>


<% if current_user %>
  <br />
  <div class='create_sitemap_modal'>
    <%= link_to 'New Sitemap', '#', class: 'disable', 'data-toggle': 'modal', 'data-target': '#create_site_map_modal' %>
    <%= render 'site_maps/create_site_map_modal' %>
  </div>
  <div class='site_maps-listing'>
    <% @site_maps.each do |site_map| %>
      <div data-id=<%= site_map.id %>>
        <%= site_map.name %>
        <%= link_to 'x', site_map_path(site_map), method: :delete, remote: true %>
      </div>
    <% end %>
  </div>
<% end %>
