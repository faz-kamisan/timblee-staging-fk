<!-- Delete SiteMap Modal -->
<div class="modal fade" id="delete-site-map-modal" tabindex="-1" role="dialog" aria-labelledby="delete-site-map-modalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Delete sitemap</h4>
        <p class="modal-message">Youre about to permanently delete this sitemap from your account.</p>
      </div>
      <div class="modal-body">
        <div class="text-center">
          <div class="folder-name-to-delete">
            <span class="icon-folder-light"></span>
            <span class="inner-name"></span>
          </div>
        </div>
        <div class="modal-button text-center">
          <!-- <%#= link_to 'Delete sitemap', site_map_path(site_map), method: :delete, remote: true, class: 'btn btn-red' %> -->
          <a href="#" class="btn btn btn-red">Delete Sitemap</a>
          <a href="#" data-dismiss="modal" class="btn btn-transparent btn-last">Cancel</a>
        </div>
      </div>
    </div>
  </div>
</div>