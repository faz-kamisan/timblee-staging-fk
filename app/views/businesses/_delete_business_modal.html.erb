<!-- Delete business Modal -->
<div class="modal fade delete-account-page" id="delete-business-modal" tabindex="-1" role="dialog" aria-labelledby="delete-business-modalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">
            <%= image_tag('close-modal.svg', class: 'close-modal') %>
          </span>
        </button>
        <h4 class="modal-title">Delete Account</h4>
        <p class="modal-message">
          You're requesting deletion of your entire account. <br> Deleting this will delete all sitemaps and users in this account. Forever. <br> We will send you an email to confirm this action.
        </p>
      </div>
      <div class="modal-body">
        <div class="text-center">
          <div class="business-name-to-delete">
            <div class="user-name-to-delete">
              <%= image_tag(current_business.logo.presence || current_user.avatar, class: 'profile-image with-delete') %>
              <span><%= current_business.name || current_user.full_name %></span>
            </div>
          </div>
        </div>
        <div class="modal-button text-center">
          <%= link_to "Request Deletion", delete_account_business_path(current_business), class: "btn btn-red", id: 'delete-business-link', data: { disable_with: 'Please wait...' } %>
          <a href="#" data-dismiss="modal" class="btn btn-transparent btn-last">Cancel</a>
        </div>
      </div>
    </div>
  </div>
</div>
