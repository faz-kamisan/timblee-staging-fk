<!-- Delete Folder Modal -->
<div class="modal fade" id="delete-folder-modal" tabindex="-1" role="dialog" aria-labelledby="delete-folder-modalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">
            <%= image_tag('close-modal.svg', class: 'close-modal') %>
          </span>
        </button>
        <h4 class="modal-title">Delete folder</h4>
        <p class="modal-message">You're about to permanently delete <span class='delete-modal-folder-name'></span> and <span class='delete-modal-folder-sitemap-count'></span> sitemaps inside it.</p>
      </div>
      <div class="modal-body">
        <div class="text-center">
          <div class="folder-name-to-delete">
            <span class="icon-folder-light"></span>
            <span class="inner-name"></span>
          </div>
        </div>
        <div class="modal-button text-center">
          <a href="#" class="btn btn-red" id='confirm-delete-folder-btn'>Delete folder</a>
          <a href="#" data-dismiss="modal" class="btn btn-transparent btn-last">Cancel</a>
        </div>
      </div>
    </div>
  </div>
</div>